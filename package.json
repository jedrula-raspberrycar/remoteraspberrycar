{
  "name": "pi-cam",
  "version": "1.0.0",
  "description": "A pure-JS Raspberry Pi webcam",
  "main": "pi-cam-poc.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prestart": "sudo uv4l -nopreview --auto-video_nr --driver raspicam --encoding h264 --width 320 --height 240 --framerate 20 --server-option '--port=3080' --server-option '--max-queued-connections=30' --server-option '--max-streams=25' --server-option '--max-threads=29'",
    "start": "sudo node simple-server.js",
    "deploy": "git push resinzero"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pimterry/pi-cam.git"
  },
  "keywords": [
    "resin-io",
    "raspberrypi",
    "webcam",
    "hardware",
    "iot"
  ],
  "author": "Tim Perry <pimterry@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pimterry/pi-cam/issues"
  },
  "homepage": "https://github.com/pimterry/pi-cam#readme",
  "dependencies": {
    "async": "^2.5.0",
    "cors": "^2.8.4",
    "express": "^4.15.2",
    "express-ws": "^3.0.0",
    "http-proxy": "^1.16.2",
    "jsonapi-serializer": "^3.5.5",
    "pigpio": "^0.6.3",
    "raspi": "^5.0.1",
    "raspi-soft-pwm": "^4.0.1",
    "raspivid-stream": "^0.2.1-beta",
    "rpi-gpio": "^0.9.1",
    "ws": "^3.3.1"
  }
}
